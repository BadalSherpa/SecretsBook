<%- include('partials/header') %>
<title>Altermate Signup</title>


<form action="/register" class="form-signin" method="POST">
<i class="fas fa-key fa-6x"></i>
<h1 class="h3 mb-3 font-weight-normal">Create Your Account</h1>
<input type="text" name="fullName" class="form-control top" placeholder="Full Name" required autofocus>
<input type="email" name="username"class="form-control middle" placeholder="Email address" required>
<input type="password" name="password" class="form-control bottom" placeholder="Password" required>
<p class="mt-5 mb-3 text-muted">Already have an account? <a href="/login"  style="text-decoration:none">Sign in</a></p>
<button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
<p style="text-align:center">OR</p>
<a href="/auth/google" role="button"  style="text-decoration:none">
<i class="fab fa-google"></i>
  Sign up with Google
</a>
<p class=" form-signin mt-5 mb-3 text-muted">&copy; 2020 BadalSherpa </p>
</form>
<%- include('partials/header') %>
